@model WEB.MVCUI.Areas.Admin.Models.Entities.OrderDetail

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-danger text-white rounded-top-4">
            <h4 class="mb-0">Sipariş Detayı Sil</h4>
        </div>
        <div class="card-body">
            <p class="fs-5">Bu sipariş detayını silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>

            <dl class="row">
                <dt class="col-sm-3">Ürün</dt>
                <dd class="col-sm-9">@Model.Product.ProductName</dd>

                <dt class="col-sm-3">Miktar</dt>
                <dd class="col-sm-9">@Model.Quantity</dd>

                <dt class="col-sm-3">Sipariş ID</dt>
                <dd class="col-sm-9">@Model.OrderID</dd>
            </dl>

            <form action="/admin/OrderDetail/DeleteConfirmed" method="post">
                <input type="hidden" name="id" value="@Model.OrderDetailID" />
                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index", "OrderDetail")" class="btn btn-secondary btn-lg px-4">
                        İptal
                    </a>
                    <button type="submit" class="btn btn-danger btn-lg px-4">
                        <i class="bi bi-trash3-fill"></i> Sil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
