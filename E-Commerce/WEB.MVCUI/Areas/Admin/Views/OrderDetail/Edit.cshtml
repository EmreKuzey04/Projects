@model WEB.MVCUI.Areas.Admin.Models.Dtos.OrderDetailUpdateDto

@{
    ViewData["Title"] = "Sipariş Detayını Düzenle";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h4 class="mb-0">Sipariş Detayını Düzenle</h4>
        </div>
        <div class="card-body">
            <form action="/Admin/OrderDetail/Edit" method="post">
                <input type="hidden" name="OrderDetailID" value="@Model.OrderDetailID" />
                <input type="hidden" name="OrderID" value="@Model.OrderID" />

                <div class="mb-3">
                    <label for="ProductId" class="form-label">Ürün</label>
                    <select id="ProductId" name="ProductId" class="form-select">
                        <option value="">-- Ürün Seçiniz --</option>
                        @foreach (var product in ViewBag.Products)
                        {
                            <option value="@product.ProductId" @(product.ProductId == Model.ProductId ? "selected" : "")>
                                @product.ProductName
                            </option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label for="Quantity" class="form-label">Miktar</label>
                    <input type="number" id="Quantity" name="Quantity" class="form-control form-control-lg" value="@Model.Quantity" min="1" />
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="/Admin/OrderDetail/Index" class="btn btn-secondary btn-lg px-4">İptal</a>
                    <button type="submit" class="btn btn-success btn-lg px-4">
                        <i class="bi bi-save-fill"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
