@model WEB.MVCUI.Areas.Admin.Models.Entities.Customer

@{
    ViewData["Title"] = "Müşteri Sil";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-danger text-white rounded-top-4">
            <h4 class="mb-0">Müşteri Sil</h4>
        </div>
        <div class="card-body">
            <p class="fs-5">Aşağıdaki müşteriyi silmek üzeresiniz. Bu işlem geri alınamaz. Devam etmek istiyor musunuz?</p>

            <dl class="row">
                <dt class="col-sm-3">Müşteri Adı</dt>
                <dd class="col-sm-9">@Model.CustomerName</dd>

                <dt class="col-sm-3">İlgili Kişi</dt>
                <dd class="col-sm-9">@Model.ContactName</dd>

                <dt class="col-sm-3">Adres</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3">Şehir</dt>
                <dd class="col-sm-9">@Model.City</dd>

                <dt class="col-sm-3">Posta Kodu</dt>
                <dd class="col-sm-9">@Model.PostalCode</dd>

                <dt class="col-sm-3">Ülke</dt>
                <dd class="col-sm-9">@Model.Country</dd>
            </dl>

            <form action="/Admin/Customer/DeleteConfirmed" method="post">
                <input type="hidden" name="id" value="@Model.CustomerID" />
                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary btn-lg px-4">
                        İptal
                    </a>
                    <button type="submit" class="btn btn-danger btn-lg px-4">
                        <i class="bi bi-trash3-fill"></i> Sil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
