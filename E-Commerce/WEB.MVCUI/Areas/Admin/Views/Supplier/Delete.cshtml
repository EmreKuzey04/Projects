@model Supplier

@{
    ViewData["Title"] = "Tedarikçi Sil";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-danger text-white rounded-top-4">
            <h4 class="mb-0">Tedarikçi Sil</h4>
        </div>
        <div class="card-body">
            <p class="fs-5">Aşağıdaki tedarikçiyi silmek üzeresiniz. Bu işlem geri alınamaz. Devam etmek istiyor musunuz?</p>

            <dl class="row">
                <dt class="col-sm-3">Tedarikçi Adı</dt>
                <dd class="col-sm-9">@Model.SupplierName</dd>

                <dt class="col-sm-3">İletişim Adı</dt>
                <dd class="col-sm-9">@Model.ContactName</dd>

                <dt class="col-sm-3">Ülke</dt>
                <dd class="col-sm-9">@Model.Country</dd>

                <dt class="col-sm-3">Telefon</dt>
                <dd class="col-sm-9">@Model.Phone</dd>
            </dl>

            <form action="/Admin/Supplier/DeleteConfirmed/@Model.SupplierID" method="post">
                <input type="hidden" name="id" value="@Model.SupplierID" />
                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index", "Supplier")" class="btn btn-secondary btn-lg px-4">
                        İptal
                    </a>
                    <button type="submit" class="btn btn-danger btn-lg px-4">
                        <i class="bi bi-trash3-fill"></i> Sil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
