@model WEB.MVCUI.Areas.Admin.Models.Entities.Product

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h4 class="mb-0">Ürün Güncelle</h4>
        </div>
        <div class="card-body">
            <form action="/Admin/Product/Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" name="ProductId" value="@Model.ProductId" />

                <div class="mb-3">
                    <label for="ProductName" class="form-label">Ürün Adı</label>
                    <input type="text" id="ProductName" name="ProductName" class="form-control form-control-lg" value="@Model.ProductName" />
                </div>

                <div class="mb-3">
                    <label for="UnitPrice" class="form-label">Fiyat</label>
                    <input type="text" id="UnitPrice" name="UnitPrice" class="form-control form-control-lg" value="@Model.UnitPrice" />
                </div>

                <div class="mb-3">
                    <label for="UnitsInStock" class="form-label">Stok Miktarı</label>
                    <input type="number" id="UnitsInStock" name="UnitsInStock" class="form-control form-control-lg" value="@Model.UnitsInStock" />
                </div>

                <div class="mb-3">
                    <label for="Description" class="form-label">Açıklama</label>
                    <textarea id="Description" name="Description" class="form-control form-control-lg" rows="3">@Model.Description</textarea>
                </div>

                <div class="mb-3">
                    <label for="CategoryId" class="form-label">Kategori ID</label>
                    <input type="number" id="CategoryId" name="CategoryId" class="form-control form-control-lg" value="@Model.CategoryId" />
                </div>

                <div class="mb-3">
                    <label for="SupplierId" class="form-label">Tedarikçi ID</label>
                    <input type="number" id="SupplierId" name="SupplierId" class="form-control form-control-lg" value="@Model.SupplierID" />
                </div>

                @if (Model.Photos != null && Model.Photos.Any())
                {
                    <div class="mb-3">
                        <label class="form-label">Mevcut Fotoğraflar</label><br />
                        @foreach (var photo in Model.Photos)
                        {
                            <img src="@photo.PhotoPath" class="img-thumbnail mb-2 me-2" style="max-height: 200px;" />
                        }
                    </div>
                }

                <div class="mb-3">
                    <label for="Photos" class="form-label">Yeni Ürün Resimleri</label>
                    <input name="Photos" type="file" accept="image/png, image/jpeg" class="form-control" id="Photos" multiple />
                </div>


                <div class="d-flex justify-content-between mt-4">
                    <a href="/Admin/Product/Index" class="btn btn-secondary btn-lg px-4">İptal</a>
                    <button type="submit" class="btn btn-success btn-lg px-4">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
