@model WEB.MVCUI.Areas.Admin.Models.Entities.Order

@{
    ViewData["Title"] = "Sipariş Düzenle";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h4 class="mb-0">Sipariş Düzenle</h4>
        </div>
        <div class="card-body">
            <form action="/Admin/Order/Edit" method="post">
                <input type="hidden" name="OrderID" value="@Model.OrderID" />

                <div class="mb-3">
                    <label for="CustomerID" class="form-label">Müşteri</label>
                    <select id="CustomerID" name="CustomerID" class="form-select">
                        <option value="">-- Müşteri Seçiniz --</option>
                        @foreach (var customer in ViewBag.Customers)
                        {
                            <option value="@customer.CustomerID" @(customer.CustomerID == Model.CustomerID ? "selected" : "")>
                                @customer.CustomerName
                            </option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label for="EmployeeID" class="form-label">Çalışan</label>
                    <select id="EmployeeID" name="EmployeeID" class="form-select">
                        <option value="">-- Çalışan Seçiniz --</option>
                        @foreach (var employee in ViewBag.Employees)
                        {
                            <option value="@employee.EmployeeID" @(employee.EmployeeID == Model.EmployeeID ? "selected" : "")>
                                @employee.FirstName @employee.LastName
                            </option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label for="ShipperID" class="form-label">Kargo Firması</label>
                    <select id="ShipperID" name="ShipperID" class="form-select">
                        <option value="">-- Kargo Firması Seçiniz --</option>
                        @foreach (var shipper in ViewBag.Shippers)
                        {
                            <option value="@shipper.ShipperID" @(shipper.ShipperID == Model.ShipperID ? "selected" : "")>
                                @shipper.ShipperName
                            </option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label for="OrderDate" class="form-label">Sipariş Tarihi</label>
                    <input type="date" id="OrderDate" name="OrderDate" class="form-control form-control-lg" value="@Model.OrderDate.ToString("yyyy-MM-dd")" />
                </div>

                <div class="mb-3">
                    <label for="Description" class="form-label">Açıklama</label>
                    <textarea id="Description" name="Description" class="form-control form-control-lg" rows="3">@Model.Description</textarea>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="/Admin/Order/Index" class="btn btn-secondary btn-lg px-4">İptal</a>
                    <button type="submit" class="btn btn-success btn-lg px-4">
                        <i class="bi bi-save-fill"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
