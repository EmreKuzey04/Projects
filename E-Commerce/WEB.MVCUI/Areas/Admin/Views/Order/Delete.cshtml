@model WEB.MVCUI.Areas.Admin.Models.Entities.Order

@{
    ViewData["Title"] = "Sipariş Sil";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-danger text-white rounded-top-4">
            <h4 class="mb-0">Sipariş Sil</h4>
        </div>
        <div class="card-body">
            <p class="fs-5">Aşağıdaki siparişi silmek üzeresiniz. Bu işlem geri alınamaz. Devam etmek istiyor musunuz?</p>

            <dl class="row">
                <dt class="col-sm-3">Müşteri ID</dt>
                <dd class="col-sm-9">@Model.CustomerID</dd>

                <dt class="col-sm-3">Çalışan ID</dt>
                <dd class="col-sm-9">@Model.EmployeeID</dd>

                <dt class="col-sm-3">Nakliyeci ID</dt>
                <dd class="col-sm-9">@Model.ShipperID</dd>

                <dt class="col-sm-3">Sipariş Tarihi</dt>
                <dd class="col-sm-9">@Model.OrderDate.ToString("dd.MM.yyyy")</dd>

                <dt class="col-sm-3">Açıklama</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>

            <form action="/Admin/Order/DeleteConfirmed" method="post">
                <input type="hidden" name="id" value="@Model.OrderID" />
                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index", "Order")" class="btn btn-secondary btn-lg px-4">
                        İptal
                    </a>
                    <button type="submit" class="btn btn-danger btn-lg px-4">
                        <i class="bi bi-trash3-fill"></i> Sil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
