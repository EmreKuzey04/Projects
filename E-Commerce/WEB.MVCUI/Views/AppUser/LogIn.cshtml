@using WEB.MVCUI.Areas.Admin.Models.Entities
@model List<City>
@section customScripts {

    <script>

        $(document).ready(function(){
           

            $("#btnLogIn").click(function() {

                var obj =
                {
                    Email: $("#txtEmail").val(),
                    Password: $("#txtPassword").val()
                };
                $.ajax({

                    url: "/AppUser/LogIn",
                    method: "post",
                    datatype: "json",
                    data: { dto :obj },
                    success:function(result)
                    {
                        if (result.isOk)
                        {
                            window.location.href = "/";
                        }
                        else
                        {
                            $("#divErrorMessages").html("<div class='alert alert-danger'>"+result.errorMessage+"</div>")
                          

                        }

                    }


                });

            });
        });

    </script>
}
<!DOCTYPE html>
<html lang="tr">

<head>

    <!-- Favicon -->
    <link href="/img/favicon.ico" rel="icon">
</head>

<body>
    <!-- Checkout Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-12">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Giriş Yap</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label>E-mail</label>
                            <input id="txtEmail" class="form-control" type="email" placeholder="example@email.com">
                        </div>
                        <div class="col-md-12 form-group">
                            <label>Şifre</label>
                            <input id="txtPassword" class="form-control" type="password" placeholder="*********">
                        </div>
                        <div class="col-md-12 form-group">
                            <input id="btnLogIn" type="button" class="btn btn-warning" value="GİRİŞ" />
                        </div>
                        <div class="col-md-12 form-group mt-3">
                            <a href="/AppUser/Register" class="btn btn-outline-primary">
                                <i class="fa fa-user-plus"></i> Kayıt Ol
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        </div>
        <div id="divErrorMessages" class="row px-xl-5">


        </div>
    </div>

    <!-- Checkout End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>
</body>

</html>