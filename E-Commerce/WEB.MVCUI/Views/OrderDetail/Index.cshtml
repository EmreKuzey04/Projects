@model List<OrderDetail>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sipariş Detayları</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-4">
        <h2 class="text-center">Sipariş Detayları</h2>

        <div class="mb-3">
            <a href="/OrderDetail/Add" class="btn btn-success">+ Sipariş Detayı Ekle</a>
        </div>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Sipariş Id</th>
                    <th>Ürün</th>
                    <th>Ürün Sipariş Miktarı</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.OrderDetailID</td>
                        <td>@item.OrderID</td>
                        <td>@item.Product.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>
                            <a href="@Url.Action("Edit", "OrderDetail", new { id = item.OrderDetailID })" class="btn btn-warning btn-sm">Güncelle</a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete", "OrderDetail", new { id = item.OrderDetailID })" class="btn btn-danger btn-sm" onclick="return confirm('Bu sipariş detayını silmek istediğinize emin misiniz?');">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
