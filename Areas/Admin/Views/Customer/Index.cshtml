@using WEB.MVCUI.Areas.Admin.Models.Entities
@model List<Customer>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Müşteri Listesi</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-4">
        <h2 class="text-center">Müşteri Listesi</h2>

        <div class="mb-3">
            <a href="/Admin/Customer/Add" class="btn btn-success">+ Müşteri Ekle</a>
        </div>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Adı</th>
                    <th>İletişim Adı</th>
                    <th>Adres</th>
                    <th>Şehir</th>
                    <th>Ülke</th>
                    <th>Posta Kodu</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CustomerID</td>
                        <td>@item.CustomerName</td>
                        <td>@item.ContactName</td>
                        <td>@(item.Address ?? "Adres Yok")</td>
                        <td>@(item.City ?? "-")</td>
                        <td>@(item.Country ?? "-")</td>
                        <td>@(item.PostalCode ?? "-")</td>
                        <td>
                            <a href="@Url.Action("Edit", "Customer", new { id = item.CustomerID })" class="btn btn-warning btn-sm">Güncelle</a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete", "Customer", new { id = item.CustomerID })" class="btn btn-danger btn-sm" onclick="return confirm('Bu müşteriyi silmek istediğinize emin misiniz?');">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
