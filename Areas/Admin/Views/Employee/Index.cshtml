@using WEB.MVCUI.Areas.Admin.Models.Entities
@model List<Employee>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Personel Listesi</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-4">
        <h2 class="text-center">Personel Listesi</h2>

        <div class="mb-3">
            <a href="/Admin/Employee/Add" class="btn btn-success">+ Personel Ekle</a>
        </div>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Adı</th>
                    <th>Soyadı</th>
                    <th>Doğum Tarihi</th>
                    <th>İşe Giriş Tarihi</th>
                    <th>Şehir</th>
                    <th>Ülke</th>
                    <th>Telefon No</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EmployeeID</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@(item.BirthDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                        <td>@(item.HireDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                        <td>@(item.City ?? "-")</td>
                        <td>@(item.Country ?? "-")</td>
                        <td>@(item.Phone ?? "-")</td>
                        <td>
                            <a href="@Url.Action("Edit", "Employee", new { id = item.EmployeeID })" class="btn btn-warning btn-sm">Güncelle</a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete", "Employee", new { id = item.EmployeeID })" class="btn btn-danger btn-sm" onclick="return confirm('Bu personeli silmek istediğinize emin misiniz?');">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
